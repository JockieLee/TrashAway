<!--pages/index/index.wxml-->
<view class="container">
<view class="header">
<image class="voice" src="/images/voice.png"/>
<!-- <view class="search"> -->
<view class="find">
<input placeholder="请输入垃圾名称"></input>
<image class="simg" src="/images/search.png"/>
</view>
<!-- </view> -->
<image class="photo" src="/images/pic.png" bindtap="uploadImage"></image>

</view>
<view class='list'>
  <block wx:for='{{dataList}}' wx:key='list' wx:for-item="item">
  <view class="list_item">
      <navigator url='details?id={{item.goods_id}}'>
      <view class='img'>
        <image src="data:image/jpg;base64,{{imghref}}{{item.goods_img}}"  mode="scaleToFill"/>
      </view>
      <view class='info'>
        <view class='title'>{{item.goods_title}}</view>
        <view class='price'>￥{{item.goods_price}}</view>
        <view class='num'>销量{{item.goods_xiaoliang}}</view>
      </view>
       </navigator>
      <view class='clear'></view>
  </view>
  </block>
</view>
 <view class="pics-list" wx:for="{{pics}}" wx:key="" >
 <image src="{{item}}" class="uploadImg"></image>
 </view>
</view>

