/* pages/search/search.wxss */
.container{
  width: 100%;
  height: 100%;
  flex-direction: column;
  display: flex;
  justify-content: content;
}
.header{
  width: 100%;
  display: flex;
  flex-direction: row;
   background-color: white;
   height: 80rpx
}
.find{
  border: 1rpx solid  #007978;
  border-radius: 20rpx;
  width: 80%;
  height: 64rpx;
  justify-content: center;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
input{
  font-size: 30rpx;
  height: 60rpx;
  width: 85%;
}
.simg{
  margin-top: 8rpx;
   width: 55rpx;
   height: 55rpx;
}
.cancel{
  background-color: #007978;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 35rpx;
  margin: 10rpx;
  width: 20%;
  height: 80%;
  text-align: center;
  line-height: 67rpx; 
}
.resultList{
  display: flex;
  flex-direction: row;
  width: 95%;
  border-radius: 10rpx;
  border:1px solid  #007978;
  height: 70rpx;
  margin: 15rpx;
}
.Name{
 font-size: 35rpx;
 width: 70%;
 margin: 10rpx;
 
}
.Type{
  font-size:35rpx;
  margin-top: 10rpx;
}
/* 遮罩层 */
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.5;
}
  
/* 弹出层 */
.modalDlg{
    width: 80%;
    position: fixed;
    top: 50px;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius:5px;
    display: flex;
    flex-direction: column;
    align-items: center;
}
 
/* 弹出层里面的图片 */
.modalDlg image{
  width: 100px;
  height: 100px;
  margin-top: 20px;
}
 
/* 弹出层里面的按钮 */
.ok{
  width: 80px;
  height: 35px;
  background:  #007978;
  line-height: 35px;
  text-align: center;
  color: #fff;
  font-size: 15px;
  margin:20px auto;
  border-radius: 100px;
}
 
/* 弹出层里面的文字 */
.text{
  text-align: justify;
  font-size: 14px;
  color: #666;
  width: 180px;
  margin-top: 10px;
}
.nores{
  margin-top: 20rpx;
}