.require_title{
   display: flex;
   flex-direction: row;
   height: 55rpx;
}
.require_img{
  height: 55rpx;
  width: 55rpx;
  margin-left: 20rpx;
}
.require_text{
  font-size: 35rpx;
  color: #e91818;
  margin-left: 10rpx;
}
.request{
  font-size: 22rpx;
  margin-left: 40rpx;
}



